<aura:component implements="lightning:availableForFlowScreens" access="global" description="FlowAuraComp">

    <aura:attribute name="InputString" type="String" default="" access="public"/>
    <aura:attribute name="SelectedValue" type="String" default="" access="public"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}" />

    <lightning:button label="Copy input to output" onclick="{!c._copyInputToOutput}"></lightning:button>
    <p>Aura - inputString = {!v.InputString}</p>
    <p>Aura - selectedValue = {!v.SelectedValue}</p>

</aura:component>